<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/layout1">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:id="@+id/bottom_menu_menu">

        <ImageButton
            android:layout_width="95dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:id="@+id/bill_menu_button"
            android:background="@drawable/menu_off"
            android:contentDescription="@string/imagebutton_description"/>

        <ImageButton
            android:layout_width="95dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:id="@+id/bill_people_button"
            android:background="@drawable/people_off"
            android:contentDescription="@string/imagebutton_description"/>

        <ImageButton
            android:layout_width="95dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:id="@+id/bill_order_button"
            android:background="@drawable/orders_off"
            android:contentDescription="@string/imagebutton_description"/>

        <ImageButton
            android:layout_width="95dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:id="@+id/bill_bill_button"
            android:background="@drawable/bill_on"
            android:contentDescription="@string/imagebutton_description"/>
    </LinearLayout>

    <ListView
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_marginTop="70dp"
        android:layout_marginRight="45dp"
        android:layout_marginEnd="45dp"
        android:layout_marginLeft="45dp"
        android:layout_marginStart="45dp"
        android:id="@+id/conta_listview" />

    <TextView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/conta_listview"
        android:layout_marginLeft="50dp"
        android:layout_marginStart="50dp"
        android:hint="TAMANHO"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:singleLine="true"
        android:ellipsize="end"
        android:id="@+id/total_textView" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/total_textView"
        android:layout_marginLeft="50dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="10dp"
        android:text="@string/service_checkBox"
        android:id="@+id/service_checkbox" />
</RelativeLayout>